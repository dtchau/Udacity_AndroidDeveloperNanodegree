<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

  <EditTextPreference
    android:defaultValue="@string/setting_location_default"
    android:inputType="text"
    android:key="@string/setting_location_key"
    android:singleLine="true"
    android:title="@string/setting_location_label"/>

  <ListPreference
    android:defaultValue="@string/setting_unit_metric"
    android:entries="@array/setting_unit_entry_labels"
    android:entryValues="@array/setting_unit_entry_values"
    android:key="@string/setting_unit_key"
    android:title="@string/setting_unit_label"/>
</PreferenceScreen>