<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="My.Headline.Big" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textStyle">bold</item>
    </style>

    # TODO: Why the app doesn't run without these 2 lines even though
    # the design view can render just fine?!
    # And the My.Headline.Big didn't cause any problem either!
    # Try My.Panel. Didn't work either!
    <style name="My"></style>
    <style name="My.Layout"></style>

    <style name="My.Layout.Full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="My.Layout.Full.Outer" parent="My.Layout.Full">
        <item name="android:padding">@dimen/activity_margin</item>
    </style>

    <style name="My.Layout.Full.Inner" parent="My.Layout.Full">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
